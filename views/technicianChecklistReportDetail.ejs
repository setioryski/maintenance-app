<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Checklist Report Detail</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
  <div class="max-w-4xl mx-auto p-6 bg-white shadow-md rounded">
    <h1 class="text-2xl font-bold mb-4">Checklist Report Detail</h1>
    
    <!-- Report Header -->
    <div class="mb-4">
      <p class="mb-1">Asset: <strong><%= assignment.asset.name %></strong></p>
      <p class="mb-1">Checklist: <strong><%= assignment.checklist ? assignment.checklist.title : 'N/A' %></strong></p>
      <p class="mb-1">
        Submitted on: <strong>
          <%= new Date(assignment.completedAt).toLocaleDateString() %> at <%= new Date(assignment.completedAt).toLocaleTimeString() %>
        </strong>
      </p>
      <p class="mb-1">Technician: <strong><%= assignment.submittedBy ? assignment.submittedBy.name : 'N/A' %></strong></p>
    </div>
    
    <!-- Task Responses -->
    <h2 class="text-xl font-semibold mt-6 mb-4">Task Responses</h2>
    <table class="w-full text-left border-collapse">
      <thead>
        <tr class="bg-gray-200">
          <th class="p-2 border">Task Description</th>
          <th class="p-2 border">Response</th>
        </tr>
      </thead>
      <tbody>
        <% if (assignment.checklist && assignment.checklist.tasks) { %>
          <% assignment.checklist.tasks.forEach(function(task) { 
               var response = assignment.responses[task._id];
          %>
            <tr class="border-b">
              <td class="p-2 border"><%= task.description %></td>
              <td class="p-2 border"><%= response ? response : 'No response provided' %></td>
            </tr>
          <% }); %>
        <% } else { %>
          <tr>
            <td class="p-2 border" colspan="2">No checklist tasks available.</td>
          </tr>
        <% } %>
      </tbody>
    </table>
    
    <!-- Back Link -->
    <div class="mt-6">
      <a href="/technician/report" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded">
        Back to Reports
      </a>
    </div>
  </div>
  
  <!-- Optional Navigation Links -->
  <div class="max-w-4xl mx-auto mt-4 flex justify-end space-x-4">
    <a href="/technician/dashboard" class="text-blue-500 hover:text-blue-700">Dashboard</a>
    <a href="/logout" class="text-blue-500 hover:text-blue-700">Logout</a>
  </div>
</body>
</html>
